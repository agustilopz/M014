<% if (data && data.mangas && data.mangas.length > 0) { %>
  <% data.mangas.forEach(manga => { %>
    <tr>
      <td><%= manga.title %></td>
      <td><%= manga.author %></td>
      <td><%= manga.year %></td>
      <td><%= manga.genre %></td>
      <td><%= manga.volumes %></td>
      <td>
        <a href="/mangas/edit/<%= manga.id %>">Editar</a>
        <form action="/mangas/delete/<%= manga.id %>" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </td>
    </tr>
  <% }) %>
<% } else { %>
  <tr><td colspan="6">No hi ha mangas disponibles.</td></tr>
<% } %>
